from std/debug import *
from std/macros import *


// empty literal
{
    let x = ""
}


// quote escape
{
    let x = "\""
}


// render tests
{
    assert(render_ast("let x = 1 + 1") == "let x: int64 = 2")
    assert(
        render_ast("{let x = 1\nlet y = 1 + 1 + x}")
        == "{let x: int64 = 1 let y: int64 = (2 + x)}"
    )
    assert(
        render_ast("let x = true and false") == "let x: bool = false"
    )
    assert(
        render_ast("let x = 1 == 1") == "let x: bool = true"
    )
    assert(
        render_ast("let x = 1 or 2") == "let x: int64 = 3"
    )
}